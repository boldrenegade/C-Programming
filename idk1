#include <iostream>
#include <bits/stdc++.h>
#define nl cout << "\n";
using namespace std;
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    long long n;
    cin >> n;
    while(n!=1){
        cout << n << " ";
        if(n%2){
            n = n*3 +1;
        }
        else {
           n=n/2;
        }
    }
    cout << n;
    return 0;
}
